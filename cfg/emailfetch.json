         "locations"   : [ { "mailbox" : true, "public" : true } ],
         "bucket"      : "feed1-testaws-pcifarelli-net",
         "topic_arn"   : "arn:aws:sns:us-east-1:331557686640:feed1-testaws-pcifarelli-net",
         "enabled"     : true
      }, 
      { 
         "name"        : "feed2",
