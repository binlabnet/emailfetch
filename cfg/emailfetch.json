            { "mailbox" : true , "public" : false, "user" : "paul" },
            { "mailbox" : true,  "public" : true },
            { "mailbox" : false, "sni"    : true,  "url" : "https://10.51.13.4/ucdprest/publish" }
         ],
         "bucket"    : "paul-testaws-pcifarelli-net",
